alias grep="grep --color=auto"
alias ls="ls --color=auto"
alias tmux="tmux -2"

alias rm="rm -i"
alias ll="ls -l"
alias burniso="sudo cdrecord -v dev=/dev/sr0"

screenshot() {
    if which scrot > /dev/null; then
        if [[ ! -d $HOME/screenshots ]]; then
            mkdir $HOME/screenshots || return 1
        fi
        scrot -cd 5 -e 'mv $f  ~/screenshots'
    else
        echo "scrot not found."
    fi
}

if which virtualenvwrapper.sh > /dev/null; then
    VIRTUALENVWRAPPER_VIRTUALENV=virtualenv2
    PROJECT_HOME=$HOME/projects
    . virtualenvwrapper.sh
fi

export EDITOR="vim"
