[color]
	diff = auto
	status = auto
	branch = auto
[alias]
	br = branch
	ci = commit
	co = checkout
	df = diff
	st = status
	pop = stash pop
	orphan = checkout --orphan

	### gitflow ###
	feat = flow feature

	### Mistakes ###
	# Add a fixup for a given commit
	# Will be squashed with git rebase --autosquash
	fixup = commit --fixup
	# Amend last commit
	amend = commit --amend
	# Edit last commit
	undo = reset --soft HEAD^

	### Changes ###
	# Display condensed changes
	changes = diff --name-status
	dic = diff --cached
	diffstat = diff --stat
	# List commits in short form
	ls = log --pretty=oneline --abbrev-commit --decorate
	# List commits in short form with changed files
	ll = log --pretty=oneline --abbrev-commit --decorate --numstat
	# List commits in short form with graph
	lg = log --pretty=oneline --abbrev-commit --decorate --graph

	### SVN ###
	svnpull = svn rebase
	svnpush = svn dcommit

	### GitHub ###
    pr = !hub pull-request

[push]
	default = simple
[rebase]
	autosquash = true
[user]
	name = Antoine Cezar
	email = acezar@amg-dev.fr
